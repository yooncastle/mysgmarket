<body>
  
  <div class="navbar-fixed" style="margin-bottom:10px">
    <nav>
      <div class="nav-wrapper" style="background-color:#e57373; width: auto">
        <a href="/home/index" class="brand-logo center" style="color:#e57373; height:100%"><img src="/assets/logo.png" style="height:100%;"></a>
      </div>
    </nav>
  </div>
  
  <div class="container">
  <!--Side nav로 해보자-->

  <ul id="slide-out" class="side-nav">
    <li><div class="userView">
      <img class="background" style = "width: auto; height: 300px;" src="/assets/navbar_background.jpg">
      <% unless current_user.nil?%>
      <a href="/myinfo"><span class="black-text name"><%=current_user.username%></span></a>
      <a href="/myinfo"><span class="black-text email"><%=current_user.email%></span></a>
      <% end %>
    </div></li>
    <li><a href="/home/tag/의류"><i class="material-icons">loyalty</i>Clothes</a></li>
    <li><a href="/home/tag/코스메틱"><i class="material-icons">loyalty</i>Cosmetics</a></li>
    <li><a href="/home/tag/책"><i class="material-icons">loyalty</i>Books</a></li>
    <li><a href="/home/tag/티켓"><i class="material-icons">loyalty</i>Tickets</a></li>
    <li><a href="/home/tag/기타"><i class="material-icons">loyalty</i>Etc</a></li>
  </ul>
  
  <div class="fixed-action-btn horizontal click-to-toggle" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large  red accent-1">
      <i class="material-icons">menu</i>
    </a>


    <ul>
      <% if current_user %>
      <li><a class="btn-floating #8c9eff #ea80fc blue lighten-3" href = "/home/myinfo"><i class="material-icons">person_pin</i></a></li>
      <li><a class="btn-floating teal lighten-2" href="/home/write"><i class="material-icons">mode_edit</i></a></li>
      <li><a class="btn-floating amber lighten-2" href="javascript:history.back()"><i class="material-icons">fast_rewind</i></a></li>
      <li><a class="btn-floating deep-orange lighten-2" href="/users/sign_out"><i class="material-icons">clear</i></a></li>
      <% else %>
      <li><a class="btn-floating amber lighten-2" href="javascript:history.back()"><i class="material-icons">store_mall_directory</i></a></li>
      <li><a class="btn-floating deep-orange lighten-2" href="/users/sign_in"><i class="material-icons">input</i></a></li>
      <% end %>
    </ul>
