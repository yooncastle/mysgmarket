  <script>
   $(document).ready(function(){
   $('.slider').slider();
    });
    
   $(".button-collapse").sideNav();
  
   $(document).ready(function() {

  var viewportHeight = $(document).height();

  $('main').css('min-height', viewportHeight - 150 ); // minus size of your header & footer

  });
  </script>
  
</body>
</html>