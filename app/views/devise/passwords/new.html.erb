<div class="container">
  <h2>비밀번호를 까먹으셨나요?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <p><%= f.label :아이디 %><br />
      <%= f.text_field :username %></p>
    </div>
  
    <div class="actions">
      <%= f.submit "비밀번호를 초기화 할 수 있는 방법을 보내주세요" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>