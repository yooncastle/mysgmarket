<div class="container">
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <% unless @one_post.image_url.nil? %>
          <img src="<%= @one_post.image_url %>">
          <% end %>
          <span class="card-title"><%= @one_post.title %></span>
        </div>
        <div class="card-content">
          <p><%= @one_post.content %></p>
        </div>
        <div class="card-content">
           <% @one_post.tags.each do |x| %>
           <div class="chip">
           <a href ="/home/tag/<%= x.name %>"><%= x.name %></a>
           <i class="close material-icons">close</i>
           </div>
          <% end %>
        </div>

        <div class="card-action">
          <% @one_post.replies.each do |x| %>
           <p> <%= x.content %> <a href="/delete_reply/<%=x.id%>">[x]</a></p>
           <p style="text-align:right; font-size:9px"><%= x.created_at.in_time_zone("Asia/Seoul").strftime("%m월%d일 %H시") %></p>
          <% end %>
          <form action="/home/reply_write" method="POST">
            <div class="form-group">
              <label for="Reply">댓글쓰기</label>
              <input type = "hidden" value = "<%= @one_post.id %>" name ="id_of_post">
                <input name = "comment" class="form-control" id="reply" placeholder="댓글을 입력해주세요">
                <button type="submit" style="background-color:#9e9e9e" class="btn waves-effect waves-light;">입력</button>
            </div>
          </form>
        </div>
        <div class="card-action" style="text-align:right">
          <a href="/delete/<%= @one_post.id %>">삭제</a>
          <a href="/update_view/<%= @one_post.id %>">수정</a>
          <a href="/home/index">목록</a>
        </div>
      </div>
    </div>
  </div>
</div>