<div class="container">
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          
          <div class="slider">
            <ul class="slides">
          <!--have to change this part -->
              <% unless @one_post.post_images[0].avatar.url.nil? %>
                <% @one_post.post_images.each do |s| %>
                  <li>
                   <img src="<%=s.avatar.url %>">
                  </li>
                <% end %>
              <% else %>
                <img src="/assets/emptyimage.png">
              <% end %>
            </ul>
          </div>
          
          <span class="card-title"><%= @one_post.title %></span>
        </div>
        <div class="card-content">
          <p><%=simple_format @one_post.content %></p>
        </div>
        <div class="card-content">
           <% @one_post.tags.each do |x| %>
            
             <div class="chip">
               <a href ="/home/tag/<%= x.name %>">&nbsp;&nbsp;<%= x.name %>&nbsp;&nbsp;</a>
             </div>
           
           <% end %>
        </div>

        <div class="card-action">
          <% @one_post.replies.each do |x| %>
           <p> <%= x.user_id %> : <%= x.content %> 
           <% if user_signed_in? && current_user.username==x.user_id %>
           <a href="/delete_reply/<%=x.id%>">[x]</a>
           <% end %>
           </p>
           
           <p style="text-align:right; font-size:9px"><%= x.created_at.in_time_zone("Asia/Seoul").strftime("%m월%d일 %H시") %></p>
          <% end %>
          <form action="/home/reply_write" method="POST">
            <input type = "hidden" value = "<%= current_user.username %>" name ="user_id">
            <div class="form-group">
              <label for="Reply">댓글쓰기</label>
              <input type = "hidden" value = "<%= @one_post.id %>" name ="id_of_post">
                <input name = "comment" class="form-control" id="reply" placeholder="댓글을 입력해주세요">
                <button type="submit" style="background-color:#9e9e9e" class="btn waves-effect waves-light;">입력</button>
            </div>
          </form>
        </div>
  
          
              <div class="card-action" style="text-align:right">
          <% if user_signed_in? && current_user==@one_post.user %>
                <a href="/delete/<%= @one_post.id %>">삭제</a>
                <a href="/update_view/<%= @one_post.id %>">수정</a>
          <% end %>  
                <a href="/home/index">목록</a>
              </div>
          
      </div>
    </div>
    
  </div>
</div>


  $(document).ready(function(){
    $('.materialboxed').materialbox();
  });
      
  $(document).ready(function(){
      $('.slider').slider();
    });