<h1>수정하기페이지</h1>
<div class ="container" style="margin-top:30px">
  <form action="/do_update/<%= @upd_post.id%>" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type = "hidden" value = "<%= current_user.email %>" name ="user_email">
      <input type="text" class="form-control" value = "<%= @upd_post.title%>" name="title" id="title_id">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Content</label>
      <textarea class="form-control" rows="5" name="content" id="content_id"><%=@upd_post.content%></textarea>
    </div> 
    <div class="form-group">
      <label for="exampleContact">Contact</label>
      <input type="text" class="form-control" value = "<%= @upd_post.contact%>" name="contact" id="contact_id" placeholder="연락처를 입력하세요">
    </div>
    <button class="btn waves-effect waves-light" style="background-color:#e57373" type="submit">Button</button>
  </form>
</div>