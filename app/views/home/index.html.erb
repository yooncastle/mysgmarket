<div class="container">

  <div class="row" >
    <% @posts.each do |p| %>
      <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <a class="thumbnail" href="/view_each/<%=p.id%>">
        <!-- change -->
          <% if p.post_images.count == 0 || p.post_images[0].avatar.url.nil? || p.finished == true %>
            <img src="<%=p.image_url%>">
          <% else %>
            <img class="img-responsive" src="<%= p.post_images[0].avatar.url%>">
          <% end %>
        </a>
      </div>
    <% end %>
    
  </div>
  
    <div class="row">
     <form class="col s12" action="/home/search">
       <div class="row">
         <div class="input-field col s6">
           <i class="material-icons prefix">search</i>
           <input id="icon_prefix" type="text" class="validate" name="search">
           <label for="icon_prefix">Search</label>
         </div>
      </div>
     </form>
   </div>
</div>
<div style="margin-left: auto; margin-right: auto; width:300px"> <%=paginate @posts, :theme => 'twitter-bootstrap'%></div>   
